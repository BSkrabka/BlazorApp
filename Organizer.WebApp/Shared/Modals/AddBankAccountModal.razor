<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Zaloguj się</h5>
                <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Zamknij" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @if (ShowAddError)
            {
                <div class="alert alert-danger" role="alert">
                    <p>@Error</p>
                </div>
            }
            <div class="modal-body">
                <EditForm Model="Request" OnSubmit="CreateBank">
                    <div class="form-group">
                        <label for="email">Nazwa konta:</label>
                        <InputText @bind-Value="Request.Name" type="text" class="form-control" id="login" placeholder="Nazwa" />
                    </div>
                    <div class="form-group">
                        <label for="value">Wartość:</label>
                        <input type="number" class="form-control" id="value" @bind="Request.Value" />
                    </div>
                    <div class="form-group">
                        <label for="accountNumber">Numer konta:</label>
                        <input type="text" class="form-control" id="accountNumber" @bind="Request.AccountNumber" />
                    </div>

                </EditForm>
            </div>
            <div class="modal-footer">
                <button @onclick="Close" type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                <button @onclick="CreateBank" type="submit" class="btn btn-primary">Utwórz</button>
            </div>
        </div>
    </div>
</div>
@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}