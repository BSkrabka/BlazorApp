<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Organizer</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
        <Authorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user/bankAccount">
                    <span class="oi oi-dollar" aria-hidden="true"></span> Konta bankowe
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user/loan">
                    <span class="oi oi-euro" aria-hidden="true"></span> Kredyty
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user/apartment">
                    <span class="oi oi-home" aria-hidden="true"></span> Mieszkania
                </NavLink>
            </div>
            <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Admin panel
            </NavLink>
            @if (expandSubNav)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        Użytkownicy
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="">
                        Mieszkania
                    </NavLink>
                </div>
            }
        </div>
        </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubNav;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
